<!DOCTYPE html>
<html lang="en">

<head>
	<title>
		CMS | Club Setting
	</title>
	<%- include("../partials/head") %>
</head>

<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
	<div class="wrapper">
		<%- include("../partials/sidebar") %>
			<div class="main">
				<%- include("../partials/header") %>

					<main class="content p-3">
						<div class="container-fluid p-0">
							<div class="row" id="msgContent" style="display: none;">
								<div class="alert alert-warning alert-dismissible" role="alert">
									<button type="button" class="btn-close" data-bs-dismiss="alert"
										aria-label="Close"></button>
									<div class="alert-message">
										<p class="mb-0"></p>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="card">
										<div class="card-header">
											<div class="row">
												<div class="col-md-6">
													<h5 class="card-title">
														Manage Club Settings
													</h5>
													<h6 class="card-subtitle text-muted"></h6>
												</div>
												<div class="col-md-6">
													<select id="clubid" name="clubid" class="form-select"></select>
												</div>
											</div>
											<div class="row">
												<div class="col-md-12">
													
												</div>
											</div>
										</div>

										<div class="card-body">
											<!-- <div class="table-responsive"> -->
												<table class="table table-striped table-bordered table-sm tableFixHead">
													<thead>
														<tr>
															<th data-search="true">NAME</th>
															<th data-search="true">VALUE</th>
															<th style="width: 50px;">ACTION</th>
														</tr>
														<tr>

															<th>
																<input class="form-control" id="name" name="name" autocomplete="off" />
															</th>
															<th>
																<input class="form-control" id="value" name="value" autocomplete="off"/>
															</th>
															<th>
																<button role="button" class="btn btn btn-outline-primary addNew" title="New Setting">
																	<svg xmlns="http://www.w3.org/2000/svg" width="24"
																		height="24" viewBox="0 0 24 24" fill="none"
																		stroke="currentColor" stroke-width="2"
																		stroke-linecap="round" stroke-linejoin="round"
																		class="feather feather-plus align-middle">
																		<line x1="12" y1="5" x2="12" y2="19"></line>
																		<line x1="5" y1="12" x2="19" y2="12"></line>
																	</svg>
																</button>
															</th>
														</tr>
													</thead>
													<tbody id="tableBody">

													</tbody>
												</table>
											<!-- </div> -->
											<!-- pagination support element (fPageStats display stats if incuded)-->
											<div class="row">
												<div class="col-md-6">
													<span id="fPageStats"></span>
												</div>
												<div class="col-md-6">
													<ul class="pagination float-end" id="fPage"></ul>
												</div>
											</div>

										</div>
									</div>
								</div>
							</div>
						</div>
					</main>
					<%- include("../partials/foot") %>
						<%- include("../partials/footer") %>
			</div>
	</div>
	<%- include("../partials/scripts") %>
		<!-- <script src="js/pagination.js"></script> -->
		<!-- <script src="js/menu.js"></script> -->
		<%- include("../partials/scripts") %>
			<script src="/js/setting.js"></script>
</body>

</html>