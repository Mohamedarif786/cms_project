<!DOCTYPE html>
<html lang="en">


<head>
    <title>
        CMS | Languages
    </title>
    <%- include("../../partials/head") %>
        <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">

</head>


<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="wrapper">
        <%- include("../../partials/sidebar") %>
            <div class="main">
                <%- include("../../partials/header") %>
                    <main class="content p-3">
                        <div class="container-fluid">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Languages</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive overflow-hidden">
                                        <table id="tablerecords"
                                            class="table table-striped table-bordered table-sm"
                                            data-resizable-columns-id="demo-table">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Code</th>
                                                </tr>
                                                <tr>
                                                    <td></td>
                                                    <td>
                                                        <input id="ByName" class="form-control" />
                                                    </td>
                                                    <td>
                                                        <input id="ByCode" class="form-control" />
                                                    </td>
                                                </tr>
                                            </thead>
                                            <tbody id="languageList">
                                                <tr id="norecords">
                                                </tr>
                                            </tbody>
                                        </table>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <span id="fPageStats"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <ul class="pagination float-end" id="fPage"></ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include("../../partials/footer") %>

            </div>
    </div>
    <%- include("../../partials/foot") %>
        <%- include("../../partials/scripts") %>

            <script src="../js/pagination.js"></script>
            <script src="../js/language.js"></script>


</body>

</html>