<!DOCTYPE html>
<html lang="en">

<head>
	<title>
		<%= pageTitle %>
	</title>
	<!-- <link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css"> -->
	<%- include("../partials/head") %>
		<script src="https://debk60diwzf0m.cloudfront.net/js/settings.js"></script>
</head>
<!--
  HOW TO USE: 
  data-theme: default (default), dark, light
  data-layout: fluid (default), boxed
  data-sidebar-position: left (default), right
  data-sidebar-behavior: sticky (default), fixed, compact
-->

<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
	<div class="wrapper">
		<%- include("../partials/sidebar") %>
			<div class="main">
				<%- include("../partials/header") %>

					<main class="content p-3">
						<div class="container-fluid p-0">
							<div class="row" id="msgContent" style="display: none;">
								<div class="alert alert-warning alert-dismissible" role="alert">
									<button type="button" class="btn-close" data-bs-dismiss="alert"
										aria-label="Close"></button>
									<div class="alert-message">
										<p class="mb-0"></p>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="card">
										<div class="card-header">
											<div class="row">
												<div class="col-md-6">
													<h5 class="card-title">
														Manage Modules
													</h5>
													<h6 class="card-subtitle text-muted"></h6>
												</div>
												<div class="col-md-6">
													<div class="card-actions float-end">
														<button id="add-resource" class="btn btn-outline-primary"><i
																class="align-middle me-2" data-feather="plus"></i>
															New Module</button>
														<button id="deleteAll" class="btn btn-outline-danger"
															title="Delete">
															<svg xmlns="http://www.w3.org/2000/svg" width="24"
																height="24" viewBox="0 0 24 24" fill="none"
																stroke="currentColor" stroke-width="2"
																stroke-linecap="round" stroke-linejoin="round"
																class="feather feather-trash align-middle">
																<polyline points="3 6 5 6 21 6"></polyline>
																<path
																	d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
																</path>
															</svg>
															Delete
														</button>
													</div>
												</div>
											</div>
										</div>

										<div class="card-body">
											<table id="main-table" class="table table-striped table-bordered table-sm"
												data-resizable-columns-id="demo-table" style="width:100%">
												<thead>
													<tr>
														<th data-action="true">Action</th>
														<th data-search="false" data-all="true" style="width:50px">All
														</th>
														<th data-search="true">Name</th>
														<th data-search="true">Type</th>
														<th>Accept Payment</th>

													</tr>
												</thead>
												<tbody>
												</tbody>
											</table>
											<!-- pagination support element (fPageStats display stats if incuded)-->
											<div class="row">
												<div class="col-md-6">
													<span id="fPageStats"></span>
												</div>
												<div class="col-md-6">
													<ul class="pagination float-end" id="fPage"></ul>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>

						<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-hidden="true">
							<div class="modal-dialog modal-dialog-centered modal-sm" role="document">
								<div class="modal-content">
									<div class="modal-header">
										<h5 class="modal-title">Add Module</h5>
										<button type="button" class="btn-close" data-bs-dismiss="modal"
											aria-label="Close"></button>
									</div>
									<form id="addForm" class="form needs-validation" autocomplete="off">
										<div class="modal-body">
											<div class="row">
												<div class="col-md-12 mb-3">
													<label class="form-label">Name</label>
													<input class="form-control" id="moduleName" autocomplete="off"
														required custom_validation="true"
														custom_validation_msg="Please enter name" />
												</div>
											</div>
											<div class="row">
												<div class="col-md-12 mb-3">
													<label class="form-label">Accepts Payment</label>
													<input class="form-check-input" type="checkbox" checked
														id="modulePayment">
												</div>
											</div>
											<div class="row">
												<div class="col-md-12 mb-3">
													<label class="form-label">Type</label>
													<select id="moduleType" required custom_validation="true"
														custom_validation_msg="Please select type" class="form-select">
														<option value="">Choose Type</option>
														<option value="INTERNAL">INTERNAL</option>
														<option value="EXTERNAL">EXTERNAL</option>
													</select>
												</div>
											</div>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary"
												data-bs-dismiss="modal">Close</button>
											<button type="button" class="btn btn-primary" id="add-confirm">Save</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</main>
					<%- include("../partials/foot") %>
						<%- include("../partials/footer") %>
			</div>
	</div>
	<%- include("../partials/scripts") %>
		<!--
			enable for autocomplete
	<script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
	-->
		<script>
			const _apiBase = '/module';
			const _dataPolicy = [];
		</script>
		<script src="js/pagination.js"></script>
		<script src="js/module.js"></script>
</body>

</html>