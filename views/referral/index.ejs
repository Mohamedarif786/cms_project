<!DOCTYPE html>
<html lang="en">

<head>

    <title>CMS | Programs
    </title>
    <%- include("../partials/head") %>
</head>

<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="wrapper">
        <%- include("../partials/sidebar") %>
            <div class="main">
                <%- include("../partials/header") %>
                    <main class="content p-3">
                        <div class="container-fluid">

                            <div class="card">
                                <div class="card-header">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4 class="card-title">Refral</h4>
                                            <h6 class="card-subtitle text-muted"></h6>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="card-actions float-end">
                                                <button class="btn btn btn-outline-primary" data-bs-toggle="modal"
                                                    data-bs-target="#addNewRefral" onclick="closeModal('newUserForm')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                        class="feather feather-plus align-middle">
                                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                                    </svg> New Refral
                                                </button>

                                                <button id="ActiveProgram" class="btn btn-outline-success"
                                                    title="Active Program">
                                                    Active
                                                </button>
                                                <button id="InactiveProgram" class="btn btn-outline-warning"
                                                    title="Inactive Program">
                                                    Inactive
                                                </button>
                                                <button id="deleteAll" class="btn btn-outline-danger" title="Delete">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                        viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                        class="feather feather-trash align-middle">
                                                        <polyline points="3 6 5 6 21 6"></polyline>
                                                        <path
                                                            d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                        </path>
                                                    </svg>
                                                    Delete
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <div class="card-body">
                                    <table id="tablerecords" class="table table-striped table-bordered table-sm"
                                        data-resizable-columns-id="demo-table">
                                        <thead>
                                            <tr>
                                                <th>ACTION</th>
                                                <th>ALL</th>
                                                <th>NAME</th>
                                                <th>CLUB</th>
                                                <th>TIER</th>
                                                <th>UNIT</th>
                                                <th>VALUE</th>
                                                <th>PAYMENT</th>
                                                <th>STATUS</th>

                                            </tr>
                                            <tr>
                                                <td></td>
                                                <th style="width: 28px;"><input type="checkbox" id="checkAll"
                                                        name="checkAll" class="form-check-input" /></th>
                                                <td>
                                                    <input id="ByName" class="form-control" />
                                                </td>
                                                <td>
                                                    <input id="ByClub" class="form-control" />
                                                </td>

                                                <td colspan="4"></td>
                                                <td>
                                                    <select id="ByStatus" class="form-select">
                                                        <option value="">ALL</option>
                                                        <option value="ACTIVE">ACTIVE</option>
                                                        <option value="INACTIVE">INACTIVE</option>
                                                        <option value="DELETED">DELETED</option>
                                                    </select>
                                                </td>
                                            </tr>
                                        </thead>
                                        <tbody id="programList">
                                            <tr id="norecords">
                                            </tr>
                                        </tbody>
                                    </table>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <span id="fPageStats"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <ul class="pagination float-end" id="fPage"></ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </main>
                    <%- include("../partials/footer") %>
                        <div class="modal fade" id="AddNewProgram" tabindex="-1" style="display: none;"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">New Program</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <form id="newUserForm" class="form needs-validation" autocomplete="off">
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Club</label>
                                                    <select class="form-select" id="clubid" name="clubid" required>
                                                        <option value="">Choose Club</option>

                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Club is required
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Name</label>
                                                    <input class="form-control" id="name" name="name" autocomplete="off"
                                                        required placeholder="Name" />
                                                    <div class="invalid-feedback">
                                                        Name is required
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Type</label>
                                                    <select class="form-select" id="type" name="type" required>
                                                        <option value="">Choose Type</option>
                                                        <option value="LOYALTY">LOYALTY</option>
                                                        <option value="REFERRAL">REFERRAL</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Type is required
                                                    </div>
                                                </div>

                                            </div>
                                            <div id="LoyaltyArea">
                                                <div class="row">
                                                    <div class="col-md-12 mb-3">
                                                        <div class="input-group ">
                                                            <span class="input-group-text">Payment</span>
                                                            <select class="form-select" id="payment" name="payment"
                                                                reqired>
                                                                <option value="NONE">NONE</option>
                                                                <option value="FULL">FULL</option>
                                                                <option value="PARTIAL">PARTIAL</option>
                                                            </select>
                                                        </div>
                                                        <div class="invalid-feedback">
                                                            Payment is required
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <div class="input-group">
                                                            <span class="input-group-text">Unit</span>
                                                            <input class="form-control valid" maxlength="3" value=""
                                                                id="unit" name="unit" autocomplete="off"
                                                                placeholder="0.00" />
                                                        </div>
                                                        <div class="invalid-feedback">
                                                            Should be greater than zero
                                                        </div>
                                                    </div>

                                                    <div class="col-md-6 mb-3">
                                                        <div class="input-group">
                                                            <span class="input-group-text">Value</span>
                                                            <input type="number" class="form-control valid" id="value"
                                                                name="value" autocomplete="off" placeholder="1"
                                                                maxlength="2" />
                                                        </div>
                                                        <div class="invalid-feedback">
                                                            Should be greater than zero
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row" id="tierArea">
                                                <div class="col-md-12 mb-3">
                                                    <label class="form-label">Tier</label>
                                                    <select class="form-select select2" id="tierid" name="tierid"
                                                        data-toggle="select2" reqired>
                                                        <option value="">Choose Tier</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Tier is required
                                                    </div>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                            data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary" id="addProgram">Save</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="modal fade" id="updateUserModal" tabindex="-1" style="display: none;"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered" role="document" style="max-width: 700px;">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Update Program</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <form id="updateUserForm" class="form needs-validation" autocomplete="off">
                                        <div class="modal-body m-3">

                                            <div class="row" style="display: flex;justify-content: space-between;">
                                                <div class="col">
                                                    <label class="form-label">Name</label>
                                                    <input class="form-control" id="update_name" name="name"
                                                        autocomplete="off" required placeholder="Name" />
                                                    <div class="invalid-feedback">
                                                        Name is required
                                                    </div>
                                                </div>
                                                <input  id="hidden_name" type="hidden"/>
                                                <div class="col">
                                                    <label class="form-label">Type</label>
                                                    <select class="form-control" id="update_type" name="type" required>
                                                        <option value="">Choose Type</option>
                                                        <option value="LOYALTY">LOYALTY</option>
                                                        <option value="REFERRAL">REFERRAL</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Type is required
                                                    </div>
                                                </div>
                                                <div class="col-sm-4">
                                                    <label class="form-label">Unit</label>
                                                    <input class="form-control valid" maxlength="3" value=""
                                                        id="update_unit" name="unit" autocomplete="off" required
                                                        placeholder="0.00" />
                                                    <div class="invalid-feedback">
                                                        Unit is required
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">


                                                <div class="col-md-4">
                                                    <label class="form-label">Value</label>
                                                    <input type="number" class="form-control valid" id="update_value"
                                                        name="value" autocomplete="off" required placeholder="1"
                                                        maxlength="2" />
                                                    <div class="invalid-feedback">
                                                        Value is required
                                                    </div>
                                                </div>
                                                <div class="col-md-4">
                                                    <label class="form-label">Payment</label>
                                                    <select class="form-control" id="update_payment" name="payment"
                                                        reqired>
                                                        <option value="">Choose Payment</option>
                                                        <option value="NONE">NONE</option>
                                                        <option value="FULL">FULL</option>
                                                        <option value="PARTIAL">PARTIAL</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Payment is required
                                                    </div>
                                                </div>
                                                <div class="col-sm-4 tier d-none">
                                                    <label class="form-label">Tier</label>
                                                    <select class="form-control select2" id="update_tierid"
                                                        name="tierid" data-toggle="select2" reqired>
                                                        <option value="">Choose Tier</option>
                                                    </select>
                                                    <div class="invalid-feedback">
                                                        Tier is required
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary"
                                                id="updateProgram">Save</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>




            </div>
    </div>
    <%- include("../partials/foot") %>

        <%- include("../partials/scripts") %>
            <!-- <script src="js/referral.js"></script>
            <script src="js/pagination.js"></script> -->
</body>

</html>