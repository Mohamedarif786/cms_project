<!DOCTYPE html>
<html lang="en">


<head>

    <title>CMS |
        <%= title %>
    </title>
    <%- include("../partials/head") %>
</head>


<body data-theme="default" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky">
    <div class="wrapper">
        <%- include("../partials/sidebar") %>
            <div class="main">
                <%- include("../partials/header") %>

                    <div class="container-fluid p-3">

                        <div class="card">
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-6">
                                        <h4 class="card-title">Security Roles</h4>
                                        <h6 class="card-subtitle text-muted"></h6>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-actions float-end">
                                            <button class="btn btn btn-outline-primary" id="AddNewRole" title="Add">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                    viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                    class="feather feather-plus align-middle">
                                                    <line x1="12" y1="5" x2="12" y2="19"></line>
                                                    <line x1="5" y1="12" x2="19" y2="12"></line>
                                                </svg> New Role
                                            </button>

                                            <button id="ActiveRole" class="btn btn-outline-success" title="Active Role">
                                                Active
                                            </button>
                                            <button id="InactiveRole" class="btn btn-outline-warning"
                                                title="Inactive Role">
                                                Inactive
                                            </button>
                                            <button id="deleteAll" class="btn btn-outline-danger" title="Delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                    viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                    class="feather feather-trash align-middle">
                                                    <polyline points="3 6 5 6 21 6"></polyline>
                                                    <path
                                                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                    </path>
                                                </svg>
                                                Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="card-body">
                                <table id="tablerecords" class="table table-striped table-bordered table-sm table-hover"
                                    data-resizable-columns-id="demo-table">
                                    <thead>
                                        <tr>
                                            <th>ACTION</th>
                                            <th>All</th>
                                            <th>NAME</th>
                                            <th>DESCRIPTION</th>
                                            <th>STATUS</th>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td class="align-middle"><input type="checkbox" id="checkAll"
                                                    name="checkAll" class="form-check-input" /></td>
                                            <td>
                                                <input id="ByName" class="form-control" />
                                            </td>
                                            <td>
                                                <input id="ByDescription" class="form-control" />
                                            </td>
                                            <td>
                                                <select id="ByStatus" class="form-select">
                                                    <option value="">ALL</option>
                                                    <option value="ACTIVE">ACTIVE</option>
                                                    <option value="INACTIVE">INACTIVE</option>
                                                    <option value="DELETED">DELETED</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody id="roleList">
                                        <tr>
                                            <td id="norecords"></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-md-6">
                                        <span id="fPageStats"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="pagination float-end" id="fPage"></ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%- include("../partials/footer") %>
            </div>
    </div>
    <%- include("../partials/foot") %>
        <div class="modal fade" data-bs-backdrop="static" id="roleModal" tabindex="-1" style="display: none;" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
                <div class="modal-content">
                    <form id="form" class="form needs-validation" autocomplete="off">
                        <input type="hidden" id="id" name="id" />
                        <div class="modal-header">
                            <h4 class="modal-title">New Role</h4>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <div class="mb-3">
                                <label class="form-label">Name</label>
                                <input class="form-control" id="name" name="name" autocomplete="off" required />
                                <div class="invalid-feedback">
                                    Name is required
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description"
                                    autocomplete="off"></textarea>
                            </div>
                            <div class="mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="bypass">
                                    <label class="form-check-label" for="bypass">Bypass Resource Checking</label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" id="Save">Save</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <%- include("../partials/scripts") %>
            <script src="js/pagination.js"></script>
            <script src="js/role.js"></script>
</body>

</html>